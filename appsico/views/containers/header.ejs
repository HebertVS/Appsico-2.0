<div class="w-9/12 p-4 m-auto flex justify-between items-center">
  <a href="/home">
    <div class="logoDiv">
      <h1 class="logo text-3xl text-blue-500">
        <strong>App</strong>sico
      </h1>
    </div>
  </a>

  <nav>
    <!-- Menu mobile -->
    <section class=" flex lg:hidden">
      <div class="HAMBURGER-ICON space-y-2 cursor-pointer" id="hamburgerIcon">
        <span class="block h-0.5 w-8 animate-pulse bg-gray-600"></span>
        <span class="block h-0.5 w-8 animate-pulse bg-gray-600"></span>
        <span class="block h-0.5 w-8 animate-pulse bg-gray-600"></span>
      </div>

      <div class="hideMenuNav" id="mobileMenu">
        <div class="CROSS-ICON absolute top-0 right-0 px-8 py-8 cursor-pointer" id="crossIcon">
          <svg class="h-8 w-8 text-gray-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18" />
            <line x1="6" y1="6" x2="18" y2="18" />
          </svg>
        </div>
        <ul class="MENU-LINK-MOBILE-OPEN flex flex-col items-center justify-between min-h-[250px]">
          <li class="border-b border-gray-600 my-8 uppercase">
            <a href="/home">Home</a>
          </li>
          <li class="border-b border-gray-600 my-8 uppercase">
            <a href="/psychologists" id="psychologistsLink">Psicólogos</a>
          </li>
          <li class="border-b border-gray-600 my-8 uppercase">
            <a href="/profileProfessional" id="profileProfessionalLink">Perfil Profissional</a>
          </li>
          <li class="border-b border-gray-600 my-8 uppercase">
            <a href="/ProfileUser" id="ProfileUserLink">Perfil Paciente</a>
          </li>
          <li class="border-b border-gray-600 my-8 uppercase">
            <a href="/" id="LogOut">Sair</a>
          </li>
        </ul>
      </div>
    </section>

    <!-- Menu Desktop -->
    <ul class="DESKTOP-MENU hidden space-x-8 lg:flex list-none">
      <li class="border-gray-600 my-8 text-lg list-item relative">
        <a href="/home" class="group inline-block relative">Home
          <span
            class="indicator absolute left-0 bottom-0 w-full h-0.5 bg-transparent group-hover:bg-blue-500 transition-all duration-300"></span>
        </a>
      </li>
      <li class="border-gray-600 my-8 text-lg list-item relative">
        <a href="/psychologists" class="group inline-block relative">Psicólogos
          <span
            class="absolute left-0 bottom-0 w-full h-0.5 bg-transparent group-hover:bg-blue-500 transition-all duration-300"></span>
        </a>
      </li>
      <li class="border-gray-600 my-8 text-lg list-item relative">
        <a href="/profileProfessional" class="group inline-block relative">Perfil Profissional
