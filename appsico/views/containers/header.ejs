      </li>
      <li class="border-gray-600 my-8 text-lg list-item relative">
        <a href="/profileUser" class="group inline-block relative">Perfil Paciente
          <span
            class="absolute left-0 bottom-0 w-full h-0.5 bg-transparent group-hover:bg-blue-500 transition-all duration-300"></span>
        </a>
      </li>
      <li class="border-gray-600 my-8 text-lg list-item relative">
        <a href="/" class="group inline-block relative">Sair
          <span
            class="absolute left-0 bottom-0 w-full h-0.5 bg-transparent group-hover:bg-blue-500 transition-all duration-300"></span>
        </a>
      </li>
    </ul>
  </nav>
</div>

<script>
  // JavaScript para toggle do menu mobile
  const hamburgerIcon = document.getElementById('hamburgerIcon');
  const crossIcon = document.getElementById('crossIcon');
  const mobileMenu = document.getElementById('mobileMenu');

  hamburgerIcon.addEventListener('click', () => {
    mobileMenu.classList.toggle('showMenuNav');
  });

  crossIcon.addEventListener('click', () => {
    mobileMenu.classList.remove('showMenuNav');
  });

  // JavaScript para fechar o menu mobile quando um link é clicado
  const mobileLinks = document.querySelectorAll('.MENU-LINK-MOBILE-OPEN a');
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu.classList.remove('showMenuNav');
    });
  });
</script>